---
import { Image } from "astro:assets";
import logo from "./logo.png";
const navItems = [
  { name: "Home", href: "#home" },
  { name: "Projects", href: "#projects" },
  { name: "Contact", href: "#contact" },
];
---

<div class="header__wrapper">
  <header class="container header">
    <a href="#home"><Image src={logo} alt="Website logo" height={22} /></a>
    <nav class="navigation-menu">
      <ul class="navigation-menu__list">
        {
          navItems.map(({ name, href }) => (
            <li>
              <a href={href} class="navigation-menu__link">
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <button id="mobile-menu-toggle">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-menu-toggler"
      >
        <g class="mobile-menu hidden">
          <path d="M18 6 6 18"></path>
          <path d="m6 6 12 12"></path>
        </g>
        <g class="mobile-menu">
          <line x1="4" x2="20" y1="12" y2="12"></line>
          <line x1="4" x2="20" y1="6" y2="6"></line>
          <line x1="4" x2="20" y1="18" y2="18"></line>
        </g>
      </svg>
    </button>
    <nav class="container mobile-menu mobile-menu__wrapper hidden">
      <ul>
        {
          navItems.map(({ name, href }) => (
            <li>
              <a href={href} class="mobile-menu__link">
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </header>
</div>

<style lang="scss">
  a {
    color: inherit;
    text-decoration: none;
  }

  ul {
    padding: 0;
    list-style: none;
  }

  button {
    height: 2rem;
    aspect-ratio: 1;
    color: var(--foreground);
    cursor: pointer;
    background-color: transparent;
    border: 1px solid #888;
    border-radius: 100%;
  }

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;

    &__wrapper {
      position: sticky;
      top: 0;
      z-index: 2000;
      display: flex;
      justify-content: center;
      min-height: 4rem;
    }
  }

  .mobile-menu {
    a:hover {
      background-color: #111;
    }

    &__wrapper {
      position: fixed;
      top: 3rem;
      left: 0;
      z-index: 2000;
      width: 100%;
      max-width: 100vw;
      padding-block-start: 0.5rem;
      overflow-y: auto;
    }

    &__link {
      display: flex;
      align-items: center;
      height: 3rem;
      color: #999;
      border-block-end: 1px solid;
    }
  }

  .navigation-menu {
    display: none;

    a:hover {
      color: white;
    }

    &__list {
      display: flex;
      gap: 1rem;
    }

    &__link {
      color: #a1a1a1;
    }
  }

  @media (width >= 720px) {
    #mobile-menu-toggle {
      display: none;
    }

    .mobile-menu {
      display: none;
    }

    .navigation-menu {
      display: block;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.querySelectorAll(".mobile-menu");
    menuButton && menuButton.addEventListener("click", toggleMobileNav);

    function toggleMobileNav() {
      mobileMenu.forEach((el) => {
        el.classList.toggle("hidden");
      });
    }
  });
</script>
